# --- MinIO root creds (for MinIO login / admin)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_TO_A_LONG_RANDOM_PASSWORD

# --- NCAT S3 storage settings (MinIO is S3-compatible)
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_PASSWORD
S3_BUCKET_NAME=ncatoolkit
S3_REGION=None

# --- Stability / production-ish tuning (commonly used with this API)
MAX_QUEUE_LENGTH=10
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=300

# --- App varibles
APP_NAME=NCAToolkit
APP_DEBUG=false
APP_DOMAIN=DOMAIN_WITHOUT_HTTP_OR_HTTPS
APP_URL=https://DOMAIN_WITHOUT_HTTP_OR_HTTPS
API_KEY=CHANGE_THIS_TO_GENERATED_KEY

# --- LOCAL_STORAGE_PATH
LOCAL_STORAGE_PATH=/tmp
